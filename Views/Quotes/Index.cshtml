@model IEnumerable<DotNetProject.Models.Quote>

@{
    ViewData["Title"] = "Quotes";
}

<h1 class="page-title">Quotes</h1>

<!-- Search and Filter Form -->
<div class="filter-card">
    <form asp-action="Index" method="get" class="row g-3 align-items-end">
        <div class="col-md-5">
            <label for="searchString" class="form-label-modern">Search by keyword</label>
            <input type="text" class="form-control form-glass" id="searchString" name="searchString"
                   value="@ViewData["CurrentSearch"]" placeholder="Search quotes...">
        </div>
        <div class="col-md-4">
            <label for="characterId" class="form-label-modern">Filter by Character</label>
            <select class="form-select form-select-glass" id="characterId" name="characterId">
                <option value="">All Characters</option>
                @foreach (var character in (SelectList)ViewData["Characters"]!)
                {
                    <option value="@character.Value" selected="@character.Selected">@character.Text</option>
                }
            </select>
        </div>
        <div class="col-md-3 d-flex gap-2">
            <button type="submit" class="btn-neon btn-neon-primary flex-grow-1">Search</button>
            <a asp-action="Index" class="btn-neon btn-neon-secondary">Clear</a>
        </div>
    </form>
</div>

<div class="mb-4">
    <a asp-action="Create" class="btn-neon btn-neon-success">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><line x1="12" x2="12" y1="5" y2="19"/><line x1="5" x2="19" y1="12" y2="12"/></svg>
        Add New Quote
    </a>
</div>

@if (!Model.Any())
{
    <div class="glass-card text-center py-5">
        <div style="font-size: 4rem; opacity: 0.3; margin-bottom: 1rem;">ðŸ’¬</div>
        <p style="color: var(--text-muted); font-size: 1.1rem;">No quotes found. Try adjusting your search criteria.</p>
        <a asp-action="Create" class="btn-neon btn-neon-primary mt-3">Create First Quote</a>
    </div>
}
else
{
    <div class="glass-card" style="padding: 0; overflow: hidden;">
        <table class="glass-table">
            <thead>
                <tr>
                    <th>Quote</th>
                    <th>Character</th>
                    <th>Episode</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr class="animate-item">
                    <td>
                        <span style="color: var(--text-primary); font-style: italic;">"@item.Text"</span>
                        @if (!string.IsNullOrEmpty(item.Context))
                        {
                            <br><small style="color: var(--text-muted);">@item.Context</small>
                        }
                    </td>
                    <td>
                        <span style="color: var(--primary-neon);">@item.Character?.Name</span>
                    </td>
                    <td>
                        <span style="color: var(--secondary-neon);">@item.Episode?.EpisodeCode</span>
                        <br><small style="color: var(--text-muted);">@item.Episode?.Title</small>
                    </td>
                    <td>
                        <div class="action-buttons">
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn-neon btn-neon-secondary" style="padding: 0.5rem 1rem; font-size: 0.75rem;">View</a>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn-neon btn-neon-primary" style="padding: 0.5rem 1rem; font-size: 0.75rem;">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn-neon btn-neon-danger" style="padding: 0.5rem 1rem; font-size: 0.75rem;">Delete</a>
                        </div>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
    <p class="mt-3" style="color: var(--text-muted);">Showing @Model.Count() quote(s)</p>
}
