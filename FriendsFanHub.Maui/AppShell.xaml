<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FriendsFanHub.Maui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:FriendsFanHub.Maui.Pages"
    Title="F.R.I.E.N.D.S Fan Hub Mobile"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Dashboard"
            Route="dashboard"
            ContentTemplate="{DataTemplate pages:DashboardPage}" />
        <ShellContent
            Title="Characters"
            Route="characters"
            ContentTemplate="{DataTemplate pages:CharactersPage}" />
        <ShellContent
            Title="Episodes"
            Route="episodes"
            ContentTemplate="{DataTemplate pages:EpisodesPage}" />
        <ShellContent
            Title="Quotes"
            Route="quotes"
            ContentTemplate="{DataTemplate pages:QuotesPage}" />
        <ShellContent
            Title="Locations"
            Route="locations"
            ContentTemplate="{DataTemplate pages:LocationsPage}" />
    </TabBar>

</Shell>
