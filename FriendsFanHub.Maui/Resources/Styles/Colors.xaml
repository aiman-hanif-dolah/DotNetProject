<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <Color x:Key="Primary">#00F5FF</Color>
    <Color x:Key="Secondary">#BF00FF</Color>
    <Color x:Key="Accent">#FF00AA</Color>
    <Color x:Key="Success">#00FF88</Color>
    <Color x:Key="Warning">#FFAA00</Color>
    <Color x:Key="Danger">#FF3366</Color>

    <Color x:Key="DarkBackground">#0A0A0F</Color>
    <Color x:Key="DarkSurface">#12121A</Color>
    <Color x:Key="DarkElevated">#1A1A25</Color>

    <Color x:Key="TextPrimary">#FFFFFF</Color>
    <Color x:Key="TextSecondary">#B3FFFFFF</Color>
    <Color x:Key="TextMuted">#80FFFFFF</Color>

    <Color x:Key="GlassFill">#0DFFFFFF</Color>
    <Color x:Key="GlassFillLight">#14FFFFFF</Color>
    <Color x:Key="GlassBorder">#26FFFFFF</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="DangerBrush" Color="{StaticResource Danger}"/>
    <SolidColorBrush x:Key="DarkBackgroundBrush" Color="{StaticResource DarkBackground}"/>
    <SolidColorBrush x:Key="DarkSurfaceBrush" Color="{StaticResource DarkSurface}"/>
    <SolidColorBrush x:Key="DarkElevatedBrush" Color="{StaticResource DarkElevated}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{StaticResource TextPrimary}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondary}"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="{StaticResource TextMuted}"/>
    <SolidColorBrush x:Key="GlassFillBrush" Color="{StaticResource GlassFill}"/>
    <SolidColorBrush x:Key="GlassFillLightBrush" Color="{StaticResource GlassFillLight}"/>
    <SolidColorBrush x:Key="GlassBorderBrush" Color="{StaticResource GlassBorder}"/>
</ResourceDictionary>
