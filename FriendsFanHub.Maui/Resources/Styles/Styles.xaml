<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:shapes="clr-namespace:Microsoft.Maui.Controls.Shapes;assembly=Microsoft.Maui.Controls">

    <LinearGradientBrush x:Key="ShellBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#0A0A0F" Offset="0" />
        <GradientStop Color="#12121A" Offset="0.45" />
        <GradientStop Color="#0F0F1A" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="NeonPrimaryBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#00F5FF" Offset="0" />
        <GradientStop Color="#00B8D4" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="NeonPurpleBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#BF00FF" Offset="0" />
        <GradientStop Color="#7A00D4" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="MediaGradientBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#AA000000" Offset="0" />
        <GradientStop Color="#66000000" Offset="1" />
    </LinearGradientBrush>

    <LinearGradientBrush x:Key="CardGlassBrush" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#11FFFFFF" Offset="0" />
        <GradientStop Color="#1AFFFFFF" Offset="0.5" />
        <GradientStop Color="#0DFFFFFF" Offset="1" />
    </LinearGradientBrush>

    <Shadow x:Key="CardShadow" Brush="#66000000" Radius="25" Opacity="0.4" Offset="0,10" />

    <Style TargetType="Page" ApplyToDerivedTypes="True">
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Background" Value="{StaticResource ShellBackgroundBrush}" />
    </Style>

    <Style TargetType="Shell" ApplyToDerivedTypes="True">
        <Setter Property="Shell.BackgroundColor" Value="{StaticResource DarkBackground}" />
        <Setter Property="Shell.ForegroundColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="Shell.TitleColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="Shell.NavBarHasShadow" Value="False" />
        <Setter Property="Shell.TabBarBackgroundColor" Value="#0D0D16" />
        <Setter Property="Shell.TabBarForegroundColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="Shell.TabBarTitleColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="Shell.TabBarUnselectedColor" Value="{StaticResource TextMuted}" />
    </Style>

    <Style TargetType="NavigationPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource DarkBackground}" />
        <Setter Property="BarTextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="IconColor" Value="{StaticResource Primary}" />
    </Style>

    <Style TargetType="TabbedPage">
        <Setter Property="BarBackgroundColor" Value="{StaticResource DarkSurface}" />
        <Setter Property="BarTextColor" Value="{StaticResource Primary}" />
        <Setter Property="UnselectedTabColor" Value="{StaticResource TextMuted}" />
        <Setter Property="SelectedTabColor" Value="{StaticResource Primary}" />
    </Style>

    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="BackgroundColor" Value="Transparent" />
        <Setter Property="FontFamily" Value="OpenSansRegular" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style TargetType="Label" x:Key="PageTitle">
        <Setter Property="FontSize" Value="28" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <Style TargetType="Label" x:Key="SectionCaption">
        <Setter Property="FontSize" Value="14" />
        <Setter Property="TextColor" Value="{StaticResource TextMuted}" />
    </Style>

    <Style TargetType="Label" x:Key="CardTitle">
        <Setter Property="FontSize" Value="18" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <Style TargetType="Label" x:Key="CardSubtitle">
        <Setter Property="FontSize" Value="13" />
        <Setter Property="TextColor" Value="{StaticResource TextSecondary}" />
    </Style>

    <Style TargetType="Entry">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource DarkSurface}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextMuted}" />
        <Setter Property="HeightRequest" Value="44"/>
    </Style>

    <Style TargetType="Editor">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource DarkSurface}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextMuted}" />
    </Style>

    <Style TargetType="Picker">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="TitleColor" Value="{StaticResource TextMuted}" />
        <Setter Property="BackgroundColor" Value="{StaticResource DarkSurface}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14" />
        <Setter Property="HeightRequest" Value="44"/>
    </Style>

    <Style TargetType="DatePicker">
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="BackgroundColor" Value="{StaticResource DarkSurface}" />
        <Setter Property="FontFamily" Value="OpenSansRegular"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="HeightRequest" Value="44"/>
    </Style>

    <Style TargetType="Button">
        <Setter Property="TextColor" Value="#000000" />
        <Setter Property="Background" Value="{StaticResource NeonPrimaryBrush}" />
        <Setter Property="FontFamily" Value="OpenSansSemibold"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="CornerRadius" Value="12"/>
        <Setter Property="Padding" Value="14,10"/>
        <Setter Property="MinimumHeightRequest" Value="44"/>
    </Style>

    <Style TargetType="Button" x:Key="SecondaryButton">
        <Setter Property="Background" Value="{StaticResource CardGlassBrush}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
        <Setter Property="BorderColor" Value="{StaticResource GlassBorder}" />
        <Setter Property="BorderWidth" Value="1"/>
    </Style>

    <Style TargetType="Button" x:Key="DangerButton">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FF3366" Offset="0" />
                    <GradientStop Color="#CC0033" Offset="1" />
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <Style TargetType="Button" x:Key="PurpleButton">
        <Setter Property="Background" Value="{StaticResource NeonPurpleBrush}" />
        <Setter Property="TextColor" Value="{StaticResource TextPrimary}" />
    </Style>

    <Style TargetType="Frame" x:Key="CardFrame">
        <Setter Property="Background" Value="{StaticResource CardGlassBrush}" />
        <Setter Property="BorderColor" Value="#22FFFFFF" />
        <Setter Property="CornerRadius" Value="18" />
        <Setter Property="HasShadow" Value="True" />
        <Setter Property="Shadow" Value="{StaticResource CardShadow}" />
        <Setter Property="Padding" Value="12" />
        <Setter Property="Margin" Value="0,0,0,14" />
    </Style>

    <Style TargetType="Border" x:Key="BadgeBorder">
        <Setter Property="Stroke" Value="{StaticResource GlassBorder}" />
        <Setter Property="BackgroundColor" Value="#2600F5FF" />
        <Setter Property="Padding" Value="6,3"/>
        <Setter Property="StrokeShape">
            <Setter.Value>
                <shapes:RoundRectangle CornerRadius="10" />
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
