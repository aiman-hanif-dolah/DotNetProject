<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FriendsFanHub.Maui.Pages.CharacterFormPage"
             Title="Character">
    <ScrollView>
        <VerticalStackLayout Spacing="10" Padding="16">
            <Label Text="Character Details" Style="{StaticResource PageTitle}" />

            <Entry Placeholder="Name" Text="{Binding Name}" />
            <Entry Placeholder="Actor Name" Text="{Binding ActorName}" />
            <Entry Placeholder="Occupation" Text="{Binding Occupation}" />
            <Editor Placeholder="Description" AutoSize="TextChanges" Text="{Binding Description}" />
            <Entry Placeholder="Image URL or local file path" Text="{Binding ImageUrl}" />
            <Entry Placeholder="Video URL" Text="{Binding VideoUrl}" />

            <HorizontalStackLayout Spacing="10">
                <Button Text="Save" Clicked="OnSaveClicked" />
                <Button Text="Cancel" Clicked="OnCancelClicked" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
