<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FriendsFanHub.Maui.Pages.LocationsPage"
             Title="Locations">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add" Clicked="OnAddLocation" />
    </ContentPage.ToolbarItems>

    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#101020" Offset="0" />
                <GradientStop Color="#0B0B18" Offset="1" />
            </LinearGradientBrush>
        </Grid.Background>

        <CollectionView ItemsSource="{Binding Locations}"
                        SelectionMode="None"
                        Margin="16"
                        VerticalOptions="FillAndExpand">
            <CollectionView.Header>
                <VerticalStackLayout Spacing="6" Margin="0,0,0,12">
                    <Label Text="Locations"
                           Style="{StaticResource PageTitle}" />
                    <Label Text="Filming and story locations pulled directly from the shared seed data."
                           Style="{StaticResource SectionCaption}" />
                </VerticalStackLayout>
            </CollectionView.Header>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <SwipeView>
                        <SwipeView.RightItems>
                            <SwipeItems Mode="Execute">
                                <SwipeItem Text="Edit"
                                           Invoked="OnEditLocation"
                                           CommandParameter="{Binding Id}" />
                                <SwipeItem Text="Delete"
                                           BackgroundColor="IndianRed"
                                           Invoked="OnDeleteLocation"
                                           CommandParameter="{Binding Id}" />
                            </SwipeItems>
                        </SwipeView.RightItems>
                        <Frame Style="{StaticResource CardFrame}">
                            <Grid RowDefinitions="Auto,Auto,Auto" RowSpacing="10">
                                <Grid HeightRequest="170">
                                    <Image Source="{Binding ImageUrl, Converter={StaticResource ImagePathConverter}}"
                                           Aspect="AspectFill" />
                                    <Border Background="{StaticResource MediaGradientBrush}"
                                            HorizontalOptions="Fill"
                                            VerticalOptions="Fill"
                                            InputTransparent="True" />
                                    <Border Style="{StaticResource BadgeBorder}"
                                            HorizontalOptions="End"
                                            VerticalOptions="Start"
                                            Margin="10">
                                        <Label Text="{Binding Type}"
                                               FontAttributes="Bold"
                                               FontSize="12"
                                               TextColor="{StaticResource Primary}" />
                                    </Border>
                                    <VerticalStackLayout Padding="14"
                                                         Spacing="2"
                                                         VerticalOptions="End">
                                        <Label Text="{Binding Name}"
                                               FontSize="20"
                                               FontAttributes="Bold" />
                                        <Label Text="{Binding Address}"
                                               Style="{StaticResource CardSubtitle}" />
                                    </VerticalStackLayout>
                                </Grid>

                                <Label Grid.Row="1"
                                       Text="{Binding Description}"
                                       Style="{StaticResource SectionCaption}"
                                       LineBreakMode="WordWrap" />

                                <FlexLayout Grid.Row="2"
                                            Direction="Row"
                                            Wrap="Wrap"
                                            JustifyContent="Start"
                                            AlignItems="Center"
                                            AlignContent="Start">
                                    <Button Text="View"
                                            Style="{StaticResource SecondaryButton}"
                                            CommandParameter="{Binding .}"
                                            Clicked="OnViewLocation"
                                            Margin="0,0,8,8" />
                                    <Button Text="Edit"
                                            CommandParameter="{Binding Id}"
                                            Clicked="OnEditLocation"
                                            Margin="0,0,8,8" />
                                    <Button Text="Delete"
                                            Style="{StaticResource DangerButton}"
                                            CommandParameter="{Binding Id}"
                                            Clicked="OnDeleteLocation"
                                            Margin="0,0,8,8" />
                                    <Button Text="Set tour"
                                            Style="{StaticResource PurpleButton}"
                                            CommandParameter="{Binding .}"
                                            Clicked="OnWatchLocationClip"
                                            Margin="0,0,8,8" />
                                </FlexLayout>
                            </Grid>
                        </Frame>
                    </SwipeView>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </Grid>
</ContentPage>
