@page "/characters"

<PageTitle>Characters ¬∑ F.R.I.E.N.D.S Mobile</PageTitle>

<section class="module-page">
    <div class="module-hero">
        <div class="hero-row">
            <p class="eyebrow">Characters</p>
            <h1>Meet the crew</h1>
            <p>Quick access to profiles, quirks, and arcs. Data is local-only to keep the mobile build self-contained.</p>
        </div>
        <div class="hero-grid">
            <div class="stat">
                <div class="stat-title">Active cards</div>
                <div class="stat-value">@characters.Count</div>
            </div>
            <div class="stat">
                <div class="stat-title">Persistence</div>
                <div class="stat-value">In-memory</div>
            </div>
            <div class="stat">
                <div class="stat-title">Flow</div>
                <div class="stat-value">Add ¬∑ Edit ¬∑ Delete</div>
            </div>
        </div>
    </div>

    <div class="form-card">
        <EditForm Model="newCharacter" OnValidSubmit="AddCharacter">
            <DataAnnotationsValidator />
            <h3>Add a character</h3>
            <div class="input-stack">
                <div>
                    <label for="name">Name</label>
                    <InputText id="name" @bind-Value="newCharacter.Name" placeholder="Rachel Green" />
                    <ValidationMessage For="@(() => newCharacter.Name)" />
                </div>
                <div>
                    <label for="role">Role</label>
                    <InputText id="role" @bind-Value="newCharacter.Role" placeholder="Fashion buyer" />
                    <ValidationMessage For="@(() => newCharacter.Role)" />
                </div>
                <div>
                    <label for="highlight">Highlight</label>
                    <InputTextArea id="highlight" @bind-Value="newCharacter.Highlight" placeholder="Known for iconic style and comedic timing." />
                    <ValidationMessage For="@(() => newCharacter.Highlight)" />
                </div>
            </div>
            <div class="card-actions">
                <button type="submit" class="btn primary">Save</button>
                <button type="button" class="btn ghost" @onclick="ResetNewCharacter">Clear</button>
            </div>
        </EditForm>
    </div>

    <div class="module-grid">
        @foreach (var character in characters)
        {
            <article class="module-card" @key="character.Id">
                <div class="chip">üßë‚Äçü§ù‚Äçüßë Character</div>
                <h3>@character.Name</h3>
                <div class="meta-row">
                    <span class="badge">@character.Role</span>
                    <span class="status-pill">Local-only</span>
                </div>
                <p>@character.Highlight</p>

                @if (editingId == character.Id)
                {
                    <EditForm Model="editModel" OnValidSubmit="SaveEdit">
                        <DataAnnotationsValidator />
                        <div class="input-stack">
                            <div>
                                <label for="edit-name">Name</label>
                                <InputText id="edit-name" @bind-Value="editModel.Name" />
                                <ValidationMessage For="@(() => editModel.Name)" />
                            </div>
                            <div>
                                <label for="edit-role">Role</label>
                                <InputText id="edit-role" @bind-Value="editModel.Role" />
                                <ValidationMessage For="@(() => editModel.Role)" />
                            </div>
                            <div>
                                <label for="edit-highlight">Highlight</label>
                                <InputTextArea id="edit-highlight" @bind-Value="editModel.Highlight" />
                                <ValidationMessage For="@(() => editModel.Highlight)" />
                            </div>
                        </div>
                        <div class="inline-actions">
                            <button type="submit" class="btn primary">Update</button>
                            <button type="button" class="btn ghost" @onclick="CancelEdit">Cancel</button>
                        </div>
                    </EditForm>
                }
                else
                {
                    <div class="card-actions">
                        <button type="button" class="btn ghost" @onclick="() => BeginEdit(character)">Edit</button>
                        <button type="button" class="btn danger" @onclick="() => DeleteCharacter(character.Id)">Delete</button>
                    </div>
                }
            </article>
        }
    </div>
</section>

@code {
    private List<Character> characters =
    [
        new Character(Guid.NewGuid(), "Rachel Green", "Fashion buyer", "Style icon who grows from runaway bride to confident buyer."),
        new Character(Guid.NewGuid(), "Ross Geller", "Paleontologist", "Loves dinosaurs, on-again off-again with Rachel, king of the pivot."),
        new Character(Guid.NewGuid(), "Chandler Bing", "Advertising exec", "Sarcastic, heart-forward, finds stability with Monica.")
    ];

    private CharacterInput newCharacter = new();
    private CharacterInput editModel = new();
    private Guid? editingId;

    private void AddCharacter()
    {
        characters.Insert(0, new Character(Guid.NewGuid(), newCharacter.Name!.Trim(), newCharacter.Role!.Trim(), newCharacter.Highlight!.Trim()));
        ResetNewCharacter();
    }

    private void ResetNewCharacter()
    {
        newCharacter = new CharacterInput();
    }

    private void BeginEdit(Character character)
    {
        editingId = character.Id;
        editModel = new CharacterInput
        {
            Name = character.Name,
            Role = character.Role,
            Highlight = character.Highlight
        };
    }

    private void SaveEdit()
    {
        if (editingId is not Guid id)
        {
            return;
        }

        var index = characters.FindIndex(c => c.Id == id);
        if (index >= 0)
        {
            characters[index] = new Character(id, editModel.Name!.Trim(), editModel.Role!.Trim(), editModel.Highlight!.Trim());
        }

        CancelEdit();
    }

    private void CancelEdit()
    {
        editingId = null;
        editModel = new CharacterInput();
    }

    private void DeleteCharacter(Guid id)
    {
        characters.RemoveAll(c => c.Id == id);
        if (editingId == id)
        {
            CancelEdit();
        }
    }

    private record Character(Guid Id, string Name, string Role, string Highlight);

    private class CharacterInput
    {
        [Required]
        [StringLength(60)]
        public string? Name { get; set; }

        [Required]
        [StringLength(60)]
        public string? Role { get; set; }

        [Required]
        [StringLength(240)]
        public string? Highlight { get; set; }
    }
}
