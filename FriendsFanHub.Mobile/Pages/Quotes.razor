@page "/quotes"

<PageTitle>Quotes 路 F.R.I.E.N.D.S Mobile</PageTitle>

<section class="module-page">
    <div class="module-hero">
        <div class="hero-row">
            <p class="eyebrow">Quotes</p>
            <h1>Catchphrases and callbacks</h1>
            <p>Collect the punchlines, callbacks, and heartfelt one-liners. Everything stays client-side for safe demoing.</p>
        </div>
        <div class="hero-grid">
            <div class="stat">
                <div class="stat-title">Quotes</div>
                <div class="stat-value">@quotes.Count</div>
            </div>
            <div class="stat">
                <div class="stat-title">Route</div>
                <div class="stat-value">/quotes</div>
            </div>
            <div class="stat">
                <div class="stat-title">Context</div>
                <div class="stat-value">Speaker 路 Episode</div>
            </div>
        </div>
    </div>

    <div class="form-card">
        <EditForm Model="newQuote" OnValidSubmit="AddQuote">
            <DataAnnotationsValidator />
            <h3>Add a quote</h3>
            <div class="input-stack">
                <div>
                    <label for="quote-text">Quote</label>
                    <InputTextArea id="quote-text" @bind-Value="newQuote.Text" placeholder="Pivot!" />
                    <ValidationMessage For="@(() => newQuote.Text)" />
                </div>
                <div>
                    <label for="quote-speaker">Speaker</label>
                    <InputText id="quote-speaker" @bind-Value="newQuote.Speaker" placeholder="Ross Geller" />
                    <ValidationMessage For="@(() => newQuote.Speaker)" />
                </div>
                <div>
                    <label for="quote-episode">Episode</label>
                    <InputText id="quote-episode" @bind-Value="newQuote.Episode" placeholder="S05 路 E16" />
                    <ValidationMessage For="@(() => newQuote.Episode)" />
                </div>
            </div>
            <div class="card-actions">
                <button type="submit" class="btn primary">Save</button>
                <button type="button" class="btn ghost" @onclick="ResetNewQuote">Clear</button>
            </div>
        </EditForm>
    </div>

    <div class="module-grid">
        @foreach (var quote in quotes)
        {
            <article class="module-card" @key="quote.Id">
                <div class="chip"> Quote</div>
                <h3>@quote.Text</h3>
                <div class="meta-row">
                    <span class="badge">@quote.Speaker</span>
                    <span class="status-pill">@quote.Episode</span>
                </div>

                @if (editingId == quote.Id)
                {
                    <EditForm Model="editModel" OnValidSubmit="SaveEdit">
                        <DataAnnotationsValidator />
                        <div class="input-stack">
                            <div>
                                <label for="edit-text">Quote</label>
                                <InputTextArea id="edit-text" @bind-Value="editModel.Text" />
                                <ValidationMessage For="@(() => editModel.Text)" />
                            </div>
                            <div>
                                <label for="edit-speaker">Speaker</label>
                                <InputText id="edit-speaker" @bind-Value="editModel.Speaker" />
                                <ValidationMessage For="@(() => editModel.Speaker)" />
                            </div>
                            <div>
                                <label for="edit-episode">Episode</label>
                                <InputText id="edit-episode" @bind-Value="editModel.Episode" />
                                <ValidationMessage For="@(() => editModel.Episode)" />
                            </div>
                        </div>
                        <div class="inline-actions">
                            <button type="submit" class="btn primary">Update</button>
                            <button type="button" class="btn ghost" @onclick="CancelEdit">Cancel</button>
                        </div>
                    </EditForm>
                }
                else
                {
                    <div class="card-actions">
                        <button type="button" class="btn ghost" @onclick="() => BeginEdit(quote)">Edit</button>
                        <button type="button" class="btn danger" @onclick="() => DeleteQuote(quote.Id)">Delete</button>
                    </div>
                }
            </article>
        }
    </div>
</section>

@code {
    private List<Quote> quotes =
    [
        new Quote(Guid.NewGuid(), "We were on a break!", "Ross", "S03 路 E15"),
        new Quote(Guid.NewGuid(), "They dont know that we know they know we know.", "Phoebe", "S05 路 E14"),
        new Quote(Guid.NewGuid(), "Welcome to the real world. It sucks. Youre gonna love it!", "Monica", "S01 路 E01")
    ];

    private QuoteInput newQuote = new();
    private QuoteInput editModel = new();
    private Guid? editingId;

    private void AddQuote()
    {
        quotes.Insert(0, new Quote(Guid.NewGuid(), newQuote.Text!.Trim(), newQuote.Speaker!.Trim(), newQuote.Episode!.Trim()));
        ResetNewQuote();
    }

    private void ResetNewQuote()
    {
        newQuote = new QuoteInput();
    }

    private void BeginEdit(Quote quote)
    {
        editingId = quote.Id;
        editModel = new QuoteInput
        {
            Text = quote.Text,
            Speaker = quote.Speaker,
            Episode = quote.Episode
        };
    }

    private void SaveEdit()
    {
        if (editingId is not Guid id)
        {
            return;
        }

        var index = quotes.FindIndex(q => q.Id == id);
        if (index >= 0)
        {
            quotes[index] = new Quote(id, editModel.Text!.Trim(), editModel.Speaker!.Trim(), editModel.Episode!.Trim());
        }

        CancelEdit();
    }

    private void CancelEdit()
    {
        editingId = null;
        editModel = new QuoteInput();
    }

    private void DeleteQuote(Guid id)
    {
        quotes.RemoveAll(q => q.Id == id);
        if (editingId == id)
        {
            CancelEdit();
        }
    }

    private record Quote(Guid Id, string Text, string Speaker, string Episode);

    private class QuoteInput
    {
        [Required]
        [StringLength(280)]
        public string? Text { get; set; }

        [Required]
        [StringLength(80)]
        public string? Speaker { get; set; }

        [Required]
        [StringLength(24)]
        public string? Episode { get; set; }
    }
}
